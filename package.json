{
	"name": "hoi4focustreepreview",
	"displayName": "HOI4 Focus Tree Preview",
	"description": "Preview focus tree of HOI4 when develop mods",
	"version": "0.0.3",
	"publisher": "Chaofan",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:hoi4focustreepreview.previewFocusTree",
		"onCommand:hoi4focustreepreview.test",
		"onWebviewPanel:hoi4ftpreview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "HOI4 Focus Tree Preview",
				"properties": {
					"hoi4focustreepreview.installPath": {
						"type": [
							"string",
							"null"
						],
						"default": null,
						"description": "Hearts of Iron IV install path"
					}
				}
			}
		],
		"commands": [
			{
				"command": "hoi4focustreepreview.previewFocusTree",
				"title": "Preview"
			},
			{
				"command": "hoi4focustreepreview.test",
				"title": "HOI4 My Test"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "hoi4focustreepreview.previewFocusTree",
					"when": "editorLangId == plaintext",
					"group": "navigation"
				},
				{
					"command": "hoi4focustreepreview.previewFocusTree",
					"when": "editorLangId == hoi4",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.149",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/pngjs": "^3.4.2",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"lodash": "^4.17.15",
		"parse-dds": "^1.2.1",
		"pngjs": "^4.0.0"
	}
}
