{
	"name": "hoi4modutilities",
	"displayName": "HOI4 Mod Utilities",
	"description": "Utilities for HOI4 mods developers",
	"version": "0.0.5",
	"publisher": "Chaofan",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"mod",
		"paradox",
		"hoi",
		"Heart of Iron"
	],
	"activationEvents": [
		"onCommand:hoi4modutilities.preview",
		"onCommand:hoi4modutilities.test",
		"onWebviewPanel:hoi4ftpreview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "HOI4 Mod Utilities",
				"properties": {
					"hoi4modutilities.installPath": {
						"type": "string",
						"default": "",
						"description": "Hearts of Iron IV install path"
					}
				}
			}
		],
		"commands": [
			{
				"command": "hoi4modutilities.preview",
				"title": "Preview HOI4 file",
				"icon": {
					"dark": "static/preview-right-dark.svg",
					"light": "static/preview-right-light.svg"
				}
			},
			{
				"command": "hoi4modutilities.test",
				"title": "HOI4 My Test"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "hoi4modutilities.preview",
					"when": "editorLangId == plaintext && !shouldHideHoi4Preview",
					"group": "navigation"
				},
				{
					"command": "hoi4modutilities.preview",
					"when": "editorLangId == hoi4 && !shouldHideHoi4Preview",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "hoi4modutilities.preview",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.149",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/pngjs": "^3.4.2",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"lodash": "^4.17.15",
		"parse-dds": "^1.2.1",
		"pngjs": "^4.0.0"
	}
}
